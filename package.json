{
	"name": "backend",
	"version": "0.1.0",
	"description": "Node.js backend for PolyHome",
	"author": {
		"name": "Kasper Siig",
		"email": "kasper@polyhome.io"
	},
	"license": "GPL-3.0-or-later",
	"homepage": "https://polyhome.io",
	"bugs": "https://github.com/polyome/backend/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/polyhome/backend"
	},
	"scripts": {
		"build": "rimraf dist && tsc -p tsconfig.build.json",
		"format": "prettier --write \"src/**/*.ts\"",
		"start": "ts-node -r tsconfig-paths/register src/main.ts",
		"start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
		"start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk=0.0.0.0 dist/main.js\"",
		"start:prod": "node dist/main.js",
		"lint": "tslint -p tsconfig.json -c tslint.json",
		"test:unit": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"codecov": "codecov"
	},
	"dependencies": {
		"@nestjs/common": "^6.0.0",
		"@nestjs/core": "^6.0.0",
		"@nestjs/mongoose": "^6.1.2",
		"@nestjs/platform-express": "^6.0.0",
		"@nestjs/platform-socket.io": "^6.5.3",
		"@nestjs/platform-ws": "^6.5.3",
		"@nestjs/websockets": "^6.5.3",
		"@types/axios": "^0.14.0",
		"@types/chokidar": "^2.1.3",
		"axios": "^0.19.0",
		"chokidar": "^3.0.2",
		"fs-extra": "^8.1.0",
		"mongoose": "^5.7.5",
		"reflect-metadata": "^0.1.12",
		"rimraf": "^2.6.2",
		"rxjs": "^6.3.3"
	},
	"devDependencies": {
		"@nestjs/testing": "6.1.1",
		"@types/express": "4.16.1",
		"@types/fs-extra": "^8.0.0",
		"@types/jest": "24.0.11",
		"@types/mongoose": "^5.5.11",
		"@types/node": "11.13.4",
		"@types/socket.io": "^2.1.2",
		"@types/supertest": "2.0.7",
		"codecov": "^3.5.0",
		"jest": "24.7.1",
		"prettier": "1.17.0",
		"supertest": "4.0.2",
		"ts-jest": "24.0.2",
		"ts-node": "8.1.0",
		"tsc-watch": "2.2.1",
		"tsconfig-paths": "3.8.0",
		"tslint": "5.16.0",
		"typescript": "3.4.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"collectCoverageFrom": [
			"**/*.ts",
			"!**/node_modules/**",
			"!**/vendor/**"
		],
		"collectCoverage": true,
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		}
	}
}
